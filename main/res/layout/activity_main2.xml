<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="415dp"
        android:layout_height="793dp"
        android:background="#F33C3A3A"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imgbtn"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/stylebtnback"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/rondbuttom"
                android:backgroundTint="@color/white"
                android:text="sig in"

                android:textColor="@color/black"
                android:textSize="22dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/rondbuttom"
                android:backgroundTint="@color/white"
                android:text="log in"
                android:textColor="@color/black"
                android:textSize="22dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="228dp"
            android:layout_height="50dp"
            android:layout_margin="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="80dp"
            android:layout_gravity="center"
            android:text="sign in"
            android:textColor="@color/white"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="100dp"
            android:text="if you have already account log in"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="we hade send an SMS to your numbe phone"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/NB1"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="#E2878181"
                android:inputType="number" />

            <TextView
                android:id="@+id/nb2"
                android:layout_width="79dp"
                android:layout_height="66dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="#E2878181"
                android:inputType="number" />

            <TextView
                android:id="@+id/nb3"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="#E2878181"
                android:inputType="number" />

            <TextView
                android:id="@+id/nb4"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="#E2878181"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button6"
                android:layout_width="157dp"
                android:layout_height="67dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="cancel"
                android:textSize="22dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="176dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:text="sign in"

                android:textSize="22dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView9"
            android:layout_width="126dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:text="@taxiBook"
            android:textColor="@color/white"
            android:textSize="20dp"

            android:layout_marginTop="50dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>